#!/usr/bin/env ruby

require_relative '../lib/move.rb'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Type a position on the board, 1-9"
puts display_board(board)
input = gets.strip

index = input_to_index(input)
move(board, index, current_player = "X")
display_board(board)
